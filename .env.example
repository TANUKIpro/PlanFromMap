# ========================================
# Semantic Map Platform Configuration
# ========================================
# Copy this file to .env and update values

# Environment
NODE_ENV=development
LOG_LEVEL=debug

# API Server
API_PORT=3000
API_HOST=localhost
API_BASE_URL=http://localhost:3000

# Frontend
VITE_APP_PORT=5173
VITE_API_URL=http://localhost:3000/api

# Database
DATABASE_URL=sqlite://./data/semantic_map.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost:5432/semantic_map

# ROS Bridge
ROS_BRIDGE_PORT=9090
ROS_MASTER_URI=http://localhost:11311
ROBOT_NAMESPACE=/hsrb

# Map Configuration
MAP_RESOLUTION_M=0.05
MAP_DEFAULT_HEIGHT_M=2.5
MAP_MAX_SIZE_MB=100

# Operation Catalog
CATALOG_PRESETS_PATH=./data/catalogs/presets
CATALOG_TEMPLATE_PATH=./data/catalogs/templates
CATALOG_MAX_OPERATIONS=10000

# MapQL Engine
MAPQL_QUERY_TIMEOUT_MS=5000
MAPQL_MAX_RESULTS=1000
MAPQL_ENABLE_CACHE=true

# 3D Generation
MESH_GENERATION_QUALITY=medium
MESH_SIMPLIFICATION_RATIO=0.5
TEXTURE_RESOLUTION=1024

# Security
JWT_SECRET=change-this-secret-in-production
SESSION_SECRET=change-this-session-secret
CORS_ORIGIN=http://localhost:5173

# File Storage
UPLOAD_PATH=./data/uploads
UPLOAD_MAX_SIZE_MB=50
EXPORT_PATH=./data/exports

# Feature Flags
ENABLE_ROS_BRIDGE=false
ENABLE_VISUAL_VALIDATION=true
ENABLE_AUTO_BACKUP=true
ENABLE_TELEMETRY=false

# Backup
BACKUP_PATH=./data/backups
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# Performance
WORKER_THREADS=4
MAX_CONCURRENT_OPERATIONS=10
CACHE_TTL_SECONDS=300

# Development
HOT_RELOAD=true
DEBUG_SQL=false
MOCK_ROS=true
SEED_DEMO_DATA=true
